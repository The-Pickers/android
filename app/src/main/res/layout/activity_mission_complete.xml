<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sub_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="403dp"
        android:background="@drawable/background_box_16"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        android:translationZ="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mission Complete!"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
            android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_comment"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ment\nmennt"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Basic"
            android:gravity="center"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@id/tv_time"/>


        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+150 pts"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Basic"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_complete"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points Earned"
            android:textSize="15sp"
            android:textColor="@color/text_basic"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Basic"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_complete"/>

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seoul"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_point"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textSize="15sp"
            android:textColor="@color/text_basic"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Basic"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_point"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours 30 mins"
            android:textSize="15sp"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_place"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="15sp"
            android:textColor="@color/text_basic"
            android:textAppearance="@style/TextAppearance.App.Pretendard.Basic"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_place"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Complete"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            android:backgroundTint="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>