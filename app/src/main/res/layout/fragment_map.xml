<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanup Map"
        android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
        android:textSize="30sp"
        android:textColor="@color/main_color"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_background_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/iv_color_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_color_chart"
        android:layout_marginBottom="140dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_map_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toTopOf="@id/iv_background_map" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_1_line"
        android:translationZ="2dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toTopOf="@id/iv_background_map" />

    <ImageView
        android:id="@+id/iv_map_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_2"
        android:translationX="-47dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_map_1"
        app:layout_constraintTop_toTopOf="@id/iv_background_map"
        app:tint="@color/main_color" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="2dp"
        android:src="@drawable/item_map_2_line"
        android:translationX="-47dp"
        app:layout_constraintStart_toStartOf="@id/iv_map_2"
        app:layout_constraintTop_toTopOf="@id/iv_map_2" />

    <ImageView
        android:id="@+id/iv_map_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_3"
        android:layout_marginStart="24dp"
        android:translationY="-18dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_3_line"
        android:layout_marginStart="24dp"
        android:translationY="-18dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_1"/>

    <ImageView
        android:id="@+id/iv_map_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_4"
        app:layout_constraintEnd_toStartOf="@id/iv_map_6"
        app:layout_constraintStart_toEndOf="@id/iv_map_3"
        app:layout_constraintTop_toBottomOf="@id/iv_map_1"
        app:layout_constraintBottom_toTopOf="@id/iv_map_5"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/iv_map_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_6"
        android:layout_marginEnd="16dp"
        android:translationY="-30dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_6_line"
        android:layout_marginEnd="16dp"
        android:translationY="-30dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_1"/>

    <ImageView
        android:id="@+id/iv_map_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_5"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background_map"
        app:layout_constraintBottom_toBottomOf="@id/iv_background_map"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_5_line"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintEnd_toEndOf="@id/iv_background_map"
        app:layout_constraintBottom_toBottomOf="@id/iv_background_map"/>

    <ImageView
        android:id="@+id/iv_map_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_5"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintBottom_toTopOf="@id/iv_map_9"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_map_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_8"
        android:layout_marginStart="42dp"
        android:translationY="-32dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_3" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_8_line"
        android:layout_marginStart="42dp"
        android:translationY="-32dp"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintTop_toBottomOf="@id/iv_map_3" />
    <ImageView
        android:id="@+id/iv_map_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_map_3"
        app:layout_constraintStart_toStartOf="@id/iv_background_map"
        app:layout_constraintBottom_toBottomOf="@id/iv_background_map"
        android:visibility="invisible"/>

