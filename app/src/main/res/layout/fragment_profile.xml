<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profile">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_edit"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="90dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_profile_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/item_profile_line"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/iv_profile_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_empty_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile_guide"
        app:layout_constraintStart_toStartOf="@id/iv_profile_guide"
        app:layout_constraintEnd_toEndOf="@id/iv_profile_guide"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_guide"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24dp"
        android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tv_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add Team"
        android:textAppearance="@style/TextAppearance.App.Pretendard.Bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/item_add_team"
        android:paddingHorizontal="40dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>