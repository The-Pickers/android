<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="17dp"
    android:background="@drawable/background_button"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/item_log_bar"
        android:layout_marginStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beach clanup"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.App.Montserrat.Basic"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_date"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beach clanup"
        android:textSize="12sp"
        android:textAppearance="@style/TextAppearance.App.Montserrat.Basic"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="74dp"
        android:layout_height="28dp"
        android:background="@drawable/background_point"
        android:text="+25 pts"
        android:gravity="center"
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.App.Montserrat.Bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>